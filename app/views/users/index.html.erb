<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
      <h2>ユーザー一覧</h2>
        <% @users.each do |user| %>
          <%= profile_img(user) %>
          <% if user.id != current_user.id %>
            <li>
              <div class="item">
                <p><%= link_to user.name, user %></p>
                <p><%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%></p>
              </div>
              <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
            </li>
          <% end %>
        <% end %>
  </div>
</div>

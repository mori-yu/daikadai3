<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <p><%= notice %></p>
    <h1>トピック一覧</h1>
    <%= link_to "トピックを作成する", new_topic_path, class: 'btn btn-default' %>
    <% @topics.each do |topic| %>
      <div class="row">
        <p><%= topic.user.name %>が投稿しました。</p>
        <p><%= profile_img(topic.user) %></p>
        <%= link_to topic_path(topic) do %>
          <h4><strong><%= topic.title %></strong></h4>
        <% end %>
        <p><%= topic.content %></p>
        <%= link_to "編集", edit_topic_path(topic.id), class: 'btn btn-sm btn-success' %>
        <%= link_to "削除", topic_path(topic.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-sm btn-danger' %>
      </div>
    <% end %>
  </div>
</div>

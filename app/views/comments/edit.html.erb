<div class="container">
    <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <h2>編集画面</h2>
    <%=form_for([@comment.topic, @comment]) do |f| %>
      <% if @comment.errors.any? %>
        <div id="error_explanation">
          <h2><%= @comment.errors.count %>件のエラーがあります。</h2>
          <ul>
          <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          </ul>
        </div>
      <% end %>
    <% end %>

    <%= f.hidden_field :topic_id %>
    <div class="field">
      <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
    </div>
    <%= f.submit'更新する',class: 'btn btn-primary btn-block' %>
    <% end %>
    </div>
</div>
